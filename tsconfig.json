{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "stripInternal": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
